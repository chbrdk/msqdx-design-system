{
    "name": "figma-plugin-msqdx",
    "version": "1.0.0",
    "description": "Figma plugin for MSQDX Design System synchronization",
    "license": "MIT",
    "scripts": {
        "build": "npm run build:ui && npm run build:code",
        "build:ui": "vite build --minify esbuild --emptyOutDir=false",
        "build:code": "esbuild src/code/index.ts --bundle --outfile=dist/code.js --minify --target=es6",
        "watch": "concurrently \"npm run watch:ui\" \"npm run watch:code\"",
        "watch:ui": "vite build --watch --minify esbuild --emptyOutDir=false",
        "watch:code": "esbuild src/code/index.ts --bundle --outfile=dist/code.js --watch"
    },
    "dependencies": {
        "react": "^19.2.4",
        "react-dom": "^19.2.4"
    },
    "devDependencies": {
        "@figma/plugin-typings": "^1.106.0",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "concurrently": "^9.1.2",
        "esbuild": "^0.25.0",
        "typescript": "^5.7.3",
        "vite": "^6.1.1",
        "vite-plugin-singlefile": "^2.1.0"
    }
}